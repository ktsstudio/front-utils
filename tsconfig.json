{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "es6",
    "emitDeclarationOnly": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "__tests__/*": ["__tests__/*"],
      "types/*": ["types/*"],
      "hooks/*": ["hooks/*"]
    }
  },
  "main": "./src/index.ts",
  "types": "./types/typings.d.ts",
  "include": ["src", "types"],
  "exclude": ["node_modules", "packages/*/node_modules"]
}
