{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "main": "./src/index.ts",
  "types": "./types/typings.d.ts",
  "include": ["src", "types"],
  "exclude": ["node_modules", "packages/*/node_modules"]
}
